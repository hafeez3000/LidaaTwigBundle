<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
            <parameter key="twi.extension.url.class">Lidaa\TwigBundle\Twig\UrlExtension</parameter>
            <parameter key="twi.extension.php.class">Lidaa\TwigBundle\Twig\PhpExtension</parameter>
            <parameter key="twi.extension.image.class">Lidaa\TwigBundle\Twig\ImageExtension</parameter>
            <parameter key="twi.extension.tag.class">Lidaa\TwigBundle\Twig\TagExtension</parameter>
            <parameter key="twi.extension.css.class">Lidaa\TwigBundle\Twig\CssExtension</parameter>
            <parameter key="twi.extension.js.class">Lidaa\TwigBundle\Twig\JsExtension</parameter>
            <parameter key="twi.extension.session.class">Lidaa\TwigBundle\Twig\SessionExtension</parameter>
            <parameter key="twi.extension.number.class">Lidaa\TwigBundle\Twig\NumberExtension</parameter>
    </parameters>
        
    <services>

        <service id="twig.extension.url" class="%twi.extension.url.class%">
          <tag name="twig.extension" />
          <argument type="service" id="router" />
        </service>

        <service id="twig.extension.php" class="%twi.extension.php.class%">
          <tag name="twig.extension" />
        </service>
        
        <service id="twig.extension.image" class="%twi.extension.image.class%">
          <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
        
        <service id="twig.extension.tag" class="%twi.extension.tag.class%">
          <tag name="twig.extension" />
        </service>
        
        <service id="twig.extension.css" class="%twi.extension.css.class%">
          <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
        
        <service id="twig.extension.js" class="%twi.extension.js.class%">
          <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>

        <service id="twig.extension.session" class="%twi.extension.session.class%">
          <tag name="twig.extension" />
        </service>

        <service id="twig.extension.number" class="%twi.extension.number.class%">
          <tag name="twig.extension" />
        </service>    
        
    </services>

</container>
